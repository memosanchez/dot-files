  "statusLine": {
    "type": "command",
    "command": "input=$(cat); model=$(echo \"$input\" | jq -r '.model.display_name // \"Unknown Model\"'); case \"$model\" in *Sonnet*) mc=96;; *Opus*) mc=95;; *Haiku*) mc=92;; *) mc=97;; esac; printf \"\\033[%sm%s\\033[0m\" \"$mc\" \"$model\""
  }
}
